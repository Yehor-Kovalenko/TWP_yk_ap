<Window x:Class="View.Board"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Board" Height="450" Width="800" Background="#FF0B431B" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,10,10,10">
        <Canvas Background="#FF0BAE1B">
            <Ellipse Name="Ball" HorizontalAlignment="Left" Height="50" Margin="220,169,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" Fill="White"/>
        </Canvas>
        <Label Content="#Balls: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>
